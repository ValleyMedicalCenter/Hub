{% if r == 'None' and t.enabled == 1 %}
    <div class="em-error" style="margin-bottom: 10px;">
        Error! Task must be rescheduled in order to run!
    </div>
{% endif %}
<div class="em-tools">
    {% if t.enabled == 1 %}
        <label class="em-switch">
            <input action="/task/{{ t.id }}/disable" type="checkbox" checked="checked" />
            <span class="slider"></span>
        </label>
    {% else %}
        <label class="em-switch">
            <input action="/task/{{ t.id }}/enable" type="checkbox" />
            <span class="slider"></span>
        </label>
    {% endif %}
    <a title="delete task" href="/task/{{ t.id }}/delete" onclick="return confirm('Are you sure?')">
        <svg viewbox="0 0 448 512" xmlns="http://www.w3.org/2000/svg">
            <path d="M432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16zM53.2 467a48 48 0 0 0 47.9 45h245.8a48 48 0 0 0 47.9-45L416 128H32z"/>
        </svg>
    </a>
    <a title="edit task" href="/task/{{ t.id }}/edit" style="padding:6px 4px">
        <svg viewbox="0 0 576 512" xmlns="http://www.w3.org/2000/svg">
            <path d="M402.3 344.9l32-32c5-5 13.7-1.5 13.7 5.7V464c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V112c0-26.5 21.5-48 48-48h273.5c7.1 0 10.7 8.6 5.7 13.7l-32 32c-1.5 1.5-3.5 2.3-5.7 2.3H48v352h352V350.5c0-2.1.8-4.1 2.3-5.6zm156.6-201.8L296.3 405.7l-90.4 10c-26.2 2.9-48.5-19.2-45.6-45.6l10-90.4L432.9 17.1c22.9-22.9 59.9-22.9 82.7 0l43.2 43.2c22.9 22.9 22.9 60 .1 82.8zM460.1 174L402 115.9 216.2 301.8l-7.3 65.3 65.3-7.3L460.1 174zm64.8-79.7l-43.2-43.2c-4.1-4.1-10.8-4.1-14.8 0L436 82l58.1 58.1 30.9-30.9c4-4.2 4-10.8-.1-14.9z"/>
        </svg>
    </a>
    <a title="run task" href="/task/{{ t.id }}/run">
        Run task now
    </a>
    <a title="reschedule task" href="/task/{{ t.id }}/schedule">
        Reschedule task
    </a>
    <a title="duplicate task" href="/task/{{ t.id }}/duplicate">
        Duplicate task
    </a>
    <a title="reset task" href="/task/{{ t.id }}/reset">
        Reset task to complete
    </a>
    <a title="duplicate task" href="/task/{{ t.id }}/endretry">
        Cancel Retry
    </a>
</div>
