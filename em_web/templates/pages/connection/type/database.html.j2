<div class="em-drop" data-toggle="clps" data-target="#database1" data-database="1">
    Connection
    <svg class="em-dropIcon" viewbox="0 0 320 512" xmlns="http://www.w3.org/2000/svg">
        <path d="m143 352.3-136-136c-9.4-9.4-9.4-24.6 0-33.9l22.6-22.6c9.4-9.4 24.6-9.4 33.9 0l96.4 96.4 96.4-96.4c9.4-9.4 24.6-9.4 33.9 0l22.6 22.6c9.4 9.4 9.4 24.6 0 33.9l-136 136c-9.2 9.4-24.4 9.4-33.8 0z"/>
    </svg>
</div>
<div class="clps" id="database1">
    <div class="em-dropBody">
        <div class="em-inputTtl">Name (ex: My fav connection)</div>
        <input class="em-input" type="text" name="database1-name" />
        <div class="em-inputTtl">Type</div>
        <select class="em-input" name="database1-type">
            <option value="" disabled="disabled">
                choose one.
            </option>
            {% for t in database_types %}
                <option value="{{ t.id }}">
                    {{ t.name }}
                </option>
            {% endfor %}
        </select>
        <div class="em-inputTtl">
            Connection String
            <br />
            <div class="em-connectionExample">
                Examples:
                <ul>
                    <li>SQL Server: SERVER=server_name;DATABASE=database_name;UID=username;PWD=password</li>
                    <li>Postgres: host=server_name dbname=database_name user=username password=password</li>
                    <li>SQLite: username:password@host,host_ip/share_name/path/to/database.sqlite</li>
                </ul>
            </div>
        </div>
        <style>
            .Codemirror {
            height:100px;
            }
        </style>
        <textarea class="em-input" name="database1-conn"                   placeholder="make sure you spell everything right ;)"></textarea>
    </div>
</div>
