{
  "baseBranches": [
    "dev"
  ],
  "bumpVersion": "patch",
  "commitMessagePrefix": "chore(deps)",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":separateMultipleMajorReleases",
    ":ignoreUnstable",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":rebaseStalePrs",
    ":npm",
    "npm:unpublishSafe"
  ],
  "labels": [
    "maintenance",
    "renovate"
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "pin",
        "digest"
      ]
    },
    {
      "automerge": true,
      "matchDepTypes": [
        "devDependencies"
      ]
    },
    {
      "automerge": true,
      "extends": "packages:linters",
      "groupName": "linters"
    },
    {
      "automerge": true,
      "extends": "packages:test",
      "groupName": "test packages"
    },
    {
      "automerge": true,
      "matchDepTypes": [
        "devDependencies"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "schedule": [
    "before 8am on Monday"
  ],
  "timezone": "America/Chicago"
}
