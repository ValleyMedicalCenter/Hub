{% if ftp_query|length ==0 %}
    <article class="message is-danger">
        <div class="message-body">There are no connections set up. Set up a connection first.</div>
    </article>
{% else %}
    <div class="field">
        <label class="label">Connection</label>
        <div class="select is-fullwidth">
            <select class="input" name="task-query-ftp">
                <option disabled="disabled" {% if not t %}selected="selected"{% endif %}>
                    Choose one
                </option>
                {% for s in ftp_query %}
                    <option value="{{ s.id }}" {% if t and t.query_ftp_id == s.id %}selected="selected"{% endif %}>
                        {{ s.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>
{% endif %}
