{% if ftp_dest|length ==0 %}
    <article class="message is-danger">
        <div class="message-body">There are no connections set up. Set up a connection first.</div>
    </article>
{% else %}
    <div class="field">
        <label class="label">Connection</label>
        <div class="select is-fullwidth">
            <select class="input" name="task-destination-ftp">
                <option disabled="disabled" {% if not t %}selected="selected"{% endif %}>
                    Choose one
                </option>
                {% for s in ftp_dest %}
                    <option value="{{ s.id }}"
                            {% if t and t.destination_ftp_id == s.id %}selected="selected"{% endif %}>
                        {{ s.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>
    {% if org %}
        <script>
            var em = document.querySelector('input[name="completionEmailRecip"]');
            if (em.value ==""){
                em.value = "{{ org.primary_contact_email }}";
            }
        </script>
    {% endif %}
{% endif %}
