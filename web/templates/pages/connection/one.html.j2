        <div class="box">
            <h2 class="title is-2">
                GPG Connections
            </h2>
            {% for s in connection.gpg %}
                <h3 class="title is-3">
                    {{ s }}
                </h3>
                <div class="field has-addons">
                    <p class="control">
                        <a class="button"
                           title="Edit GPG Connection"
                           href="{{ url_for('connection_bp.edit_connection_gpg', connection_id=connection.id, gpg_id=s.id)}}">
