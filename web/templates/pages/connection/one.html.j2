        Tasks using this destination
    </h2>
    <!-- ajax table -->
    <div class="em-ajaxTable mb-5"
         data-src="{{ url_for('table_bp.connection_tasks', connection_id=connection.id) }}">
        <div class="loader">
        </div>
    </div>
{% endblock body %}
